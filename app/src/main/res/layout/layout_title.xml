<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#15171a"
    android:gravity="center_vertical"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextSwitcher
        android:id="@+id/tv_title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:textAllCaps="false"
        android:visibility="gone" />

    <!--搜索-->
    <ImageView

        android:id="@+id/iv_title_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/abc_ic_search_api_mtrl_alpha"
        android:visibility="gone" />

    <!--返回-->
    <ImageView
        android:id="@+id/iv_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ease_mm_title_back"
        android:visibility="gone" />

    <!--标题-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:lines="1"
            android:textColor="#ffffff"
            android:textSize="16sp"
            tool:text="商店" />
    </LinearLayout>


    <!--购物车-->
    <ImageView
        android:id="@+id/iv_title_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_navigation_cart"
        android:visibility="gone" />

    <!--列表-->
    <ImageView
        android:id="@+id/iv_title_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar_navigation_menu"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_title_faver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/topic_nofavour"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/iv_title_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_share_shopgood"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_title_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_setting"
        android:visibility="gone" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_cart_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textColor="#cccccc"
        android:textSize="14sp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_more_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多设置"
        android:textColor="#cccccc"
        android:textSize="14sp" />


</LinearLayout>